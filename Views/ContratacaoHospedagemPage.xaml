<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelTelaApp.Views.ContratacaoHospedagemPage"
             Title="ContratacaoHospedagemPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Margin="15">
        <Label Text="Cálculo Diário"
               TextColor="{StaticResource Primary}"
               FontSize="30"
               FontFamily="MontserratRegular"
               HorizontalOptions="Center" />

        <Frame BackgroundColor="{StaticResource Gray100}"
               BorderColor="{StaticResource Gray950}"
               CornerRadius="4"
               Padding="10"
               VerticalOptions="Center">

            <VerticalStackLayout VerticalOptions="Center">

                <Grid RowDefinitions="Auto,Auto"
                      ColumnDefinitions="*,*,2*"
                      HorizontalOptions="Center"
                      VerticalOptions="Center"
                      RowSpacing="10"
                      ColumnSpacing="10">

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           TextColor="{StaticResource Primary}"
                           Text="Adultos"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <Label Grid.Row="0"
                           Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stpAdultos}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <Stepper Grid.Row="0"
                             Grid.Column="2"
                             x:Name="stpAdultos"
                             Minimum="1"
                             Maximum="10"
                             Increment="1"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" />

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           TextColor="{StaticResource Primary}"
                           Text="Crianças"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <Label Grid.Row="1"
                           Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stpCriancas}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center" />

                    <Stepper Grid.Row="1"
                             Grid.Column="2"
                             x:Name="stpCriancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1"
                             HorizontalOptions="Center"
                             VerticalOptions="Center" />

                </Grid>

                <Label TextColor="{x:StaticResource Primary}"
                       FontSize="20"
                       FontAttributes="Bold"
                       Text="Escolha Sua Suíte"
                       VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center"
                       Margin="10" />

                <Picker x:Name="pckQuarto"
                        Title="Selecione sua Acomodação"
                        TitleColor="{x:StaticResource Primary}" />

                <Frame Padding="10"
                       Margin="10">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia"
                               TextColor="{x:StaticResource Primary}" />
                        <HorizontalStackLayout>
                            <Label Text="Check-in:"
                                   TextColor="{x:StaticResource Primary}" />
                            <DatePicker x:Name="dtpCheckIn"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="Check-Out:"
                                   TextColor="{x:StaticResource Primary}" />
                            <DatePicker x:Name="dtpCheckOut"
                                        Format="dd/MM/yyyy" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>