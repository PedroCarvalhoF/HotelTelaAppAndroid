<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelTelaApp.Views.HospedagemContratadaPage"
             Title="HospedagemContratadaPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="Center">

        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="{x:StaticResource Primary}"
               FontFamily="MontserratRegular"
               FontSize="30"
               HorizontalOptions="Center" />

        <Frame Margin="10">
            <HorizontalStackLayout Spacing="20">
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Adultos:"
                           TextColor="{x:StaticResource Primary}" />
                    <Label Text="{Binding QtdAdultos}"
                           TextColor="{x:StaticResource Primary}" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="10">
                    <Label Text="CrianÃ§as:"
                           TextColor="{x:StaticResource Primary}" />
                    <Label Text="{Binding QtdCriancas}"
                           TextColor="{x:StaticResource Primary}" />
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            <Grid ColumnDefinitions="*,*,*"
                  RowDefinitions="Auto,Auto">

                <Label Grid.Row="0"
                       Grid.Column="0"
                       Text="Check-In:" />
                <Label Grid.Row="0"
                       Grid.Column="1"
                       Text="Check-Out:" />
                <Label Grid.Row="0"
                       Grid.Column="2"
                       Text="Estadia:" />
                
                <Label Grid.Row="1"
                       Grid.Column="0"
                       Text="{Binding DataCheckIn, StringFormat='{0:dd-MM-yyyy}'}" />
                <Label Grid.Row="1"
                       Grid.Column="1"
                       Text="{Binding DataCheckOut, StringFormat='{0:dd-MM-yyyy}'}" />
                <Label Grid.Row="1"
                       Grid.Column="2"
                       Text="{Binding Estadia}" />

            </Grid>
        </Frame>

        <Frame>
            <HorizontalStackLayout>
                <Label Text="Valor Total: " />
                <Label Text="{Binding ValorTotal}" />
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
                Clicked="Button_Clicked"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>